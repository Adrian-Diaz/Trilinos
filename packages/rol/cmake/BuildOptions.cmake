# Will add the subdirectory if set to ON

FUNCTION( ADD_SUBDIRECTORY_IF DIR TEST_CASE ) 
SET(${TEST_CASE} ${${TEST_CASE}} PARENT_SCOPE)
IF( ${${TEST_CASE}} )
ADD_SUBDIRECTORY(${DIR})
ENDIF()

ENDFUNCTION( ADD_SUBDIRECTORY_IF ) 


# WILL ADD THE SUBDIRECTORY IF THE PARAMETER IS SET TO OFF

FUNCTION( ADD_SUBDIRECTORY_IF_OFF DIR TEST_CASE )
SET(${TEST_CASE} ${${TEST_CASE}} PARENT_SCOPE)

IF( NOT ${${TEST_CASE}} )
ADD_SUBDIRECTORY(${DIR})
ENDIF()

ENDFUNCTION( ADD_SUBDIRECTORY_IF_OFF )

