# Options not specified by configure will be defined as ON
FUNCTION( ENABLE_BY_DEFAULT OPTION_NAME )
  IF( NOT DEFINED ${PACKAGE_NAME}_ENABLE_${OPTION_NAME} )
    MESSAGE( "${PACKAGE_NAME}_ENABLE_${OPTION_NAME} is not defined")
    MESSAGE( "Setting to default value = ON" )
    SET( ${PACKAGE_NAME}_ENABLE_${OPTION_NAME} ON )
  ENDIF()
ENDFUNCTION()

# Options not specified by configure will be defined as OFF
FUNCTION( DISABLE_BY_DEFAULT OPTION_NAME )
  IF( NOT DEFINED ${PACKAGE_NAME}_ENABLE_${OPTION_NAME} )
    MESSAGE( "${PACKAGE_NAME}_ENABLE_${OPTION_NAME} is not defined")
    MESSAGE( "Setting to default value = OFF" )
    SET( ${PACKAGE_NAME}_ENABLE_${OPTION_NAME} OFF )
  ENDIF()
ENDFUNCTION()

