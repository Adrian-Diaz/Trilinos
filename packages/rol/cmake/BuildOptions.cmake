# Will add the subdirectory if set to ON
FUNCTION( ADD_SUBDIRECTORY_IF DIR CONDITION ) 
  SET(${CONDITION} ${${CONDITION}} PARENT_SCOPE)
  IF( ${${CONDITION}} )
    ADD_SUBDIRECTORY(${DIR})
  ENDIF()
ENDFUNCTION() 


# WILL ADD THE SUBDIRECTORY IF THE PARAMETER IS SET TO OFF
FUNCTION( ADD_SUBDIRECTORY_IF_OFF DIR CONDITION )
  SET(${CONDITION} ${${CONDITION}} PARENT_SCOPE)
  IF( NOT ${${CONDITION}} )
    ADD_SUBDIRECTORY(${DIR})
  ENDIF()
ENDFUNCTION()

# Include directory and headers within if CONDITION=ON
FUNCTION( INCLUDE_DIRECTORY_IF DIR HEADERS CONDITION ) 
  SET( ${HEADERS} ${${HEADERS}} PARENT_SCOPE )
  SET( ${CONDITION} ${${CONDITION}} PARENT_SCOPE )
  IF( ${CONDITION} )
    MESSAGE( "Conditional include (${CONDITION}=${${CONDITION}})")
    MESSAGE( "Including directories ${DIR} " )
    INCLUDE_DIRECTORIES(${DIR})
    APPEND_GLOB(HEADER ${DIR}/*.hpp)
  ENDIF( ${CONDITION} )
ENDFUNCTION() 

FUNCTION( INCLUDE_DIRECTORY_IF_OFF DIR HEADERS CONDITION ) 
  SET( ${HEADERS} ${${HEADERS}} PARENT_SCOPE )
  SET( ${CONDITION} ${${CONDITION}} PARENT_SCOPE )
  IF( NOT ${CONDITION} )
    MESSAGE( "Conditional include (${CONDITION}=${${CONDITION}})")
    MESSAGE( "Including directories ${DIR} " )
    INCLUDE_DIRECTORIES(${DIR})
    APPEND_GLOB(HEADERS ${DIR}/*.hpp)
  ENDIF( NOT ${CONDITION} )
  INCLUDE_DIRECTORIES(${DIR})
  APPEND_GLOB(HEADERS ${DIR}/*.hpp)
ENDFUNCTION()



